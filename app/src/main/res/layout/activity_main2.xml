<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/front"
    tools:context=".MainActivity2">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessParent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            tools:ignore="UselessLeaf">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="45dp"
                    app:cardUseCompatPadding="true">
                    <ImageView
                        android:id="@+id/ehsan"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/ahesan"
                        android:contentDescription="@string/first"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hi"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:layout_marginTop="25dp"
                    android:layout_marginStart="20dp"/>
                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:src="@drawable/traveler"
                   android:layout_marginTop="25dp"
                    android:layout_marginStart="220dp"
                    android:contentDescription="@string/get"/>
            </LinearLayout>
             <TextView
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                  android:text="@string/where"
                 android:textColor="@color/white"
                 android:textStyle="bold"
                 android:layout_marginStart="7dp"
                 />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/to"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:layout_marginStart="30dp"
                />
              <TextView
                  android:layout_marginTop="10dp"
                  android:layout_width="370dp"
                  android:layout_height="50dp"
                  android:background="@drawable/button"
                  android:layout_gravity="center_horizontal"
                  android:text="@string/welcome"
                  android:backgroundTint="@color/white"
                  android:textStyle="bold"
                 android:paddingStart="40dp"
                  android:paddingTop="10dp"
                  android:textSize="15sp"
                  android:drawableEnd="@drawable/shahan"
                  android:paddingEnd="30dp"
                  android:drawablePadding="40dp"
                  android:drawableStart="@drawable/baseline_directions_run_24"
                  tools:ignore="RtlSymmetry,UseCompatTextViewDrawableXml" />


              <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="@string/upcoming"
                  android:textStyle="bold"
                  android:textColor="@color/white"
                  android:padding="10dp"/>
            <androidx.cardview.widget.CardView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardUseCompatPadding="true"
                android:layout_gravity="center_horizontal"
                app:cardElevation="5dp">
                <ImageView
                    android:layout_width="340dp"
                    android:layout_height="180dp"
                    android:src="@drawable/malaysia"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/b"/>
            </androidx.cardview.widget.CardView>

                   <TextView
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:text="@string/popular"
                       android:textColor="@color/white"
                       android:textStyle="bold"
                       android:layout_margin="15dp"/>
                     <androidx.recyclerview.widget.RecyclerView
                         android:layout_width="match_parent"
                         android:layout_height="wrap_content"
                         android:id="@+id/first"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/india"
                android:textStyle="bold"
                android:textColor="@color/white"
               android:padding="10dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/second"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
